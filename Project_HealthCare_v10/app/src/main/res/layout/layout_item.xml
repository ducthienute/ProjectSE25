<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <CheckBox
        android:id="@+id/checkBoxSelect"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:buttonTint="@color/black"
        android:background="@color/transparent"
        android:clickable="false"/>

    <ImageView
        android:id="@+id/imageViewStatus"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:padding="15dp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/imageViewIcon1"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/imageViewStatus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textViewItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageViewIcon1"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="data1" />

    <ImageView
        android:id="@+id/imageViewIcon2"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageViewIcon1"
        android:layout_toEndOf="@id/imageViewStatus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/ic_launcher"/>
    <TextView
        android:id="@+id/textViewItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageViewIcon2"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:text="data2" />

    <RelativeLayout
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="50dp">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/textViewTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="hh:mm dd/MM/yyyy"/>
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewTime"
            android:textStyle="bold"
            android:text="Good"
            android:textSize="20sp" />
    </RelativeLayout>

</RelativeLayout>
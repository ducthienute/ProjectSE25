<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/imageViewIcon"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_background"/>

    <EditText
        android:id="@+id/editTextQuery"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageViewIcon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/gray"
        android:ellipsize="end"
        android:lines="9"
        android:maxLines="10"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:singleLine="false"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textViewTemp1"
        android:layout_below="@id/editTextQuery"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kết Quả "/>
    <TextView
        android:textSize="15sp"
        android:id="@+id/textViewCalo"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:layout_below="@+id/textViewTemp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"/>

    <RelativeLayout
        android:layout_below="@+id/textViewCalo"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tìm Kiếm"/>

        <Button
            android:id="@+id/buttonTransport"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/buttonSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyển Kết Quả Vào Calo"/>

        <TextView
            android:id="@+id/textViewTemp2"
            android:textAlignment="center"
            android:layout_below="@+id/buttonTransport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dữ Liệu Lưu Trữ"/>
        <TextView
            android:id="@+id/textViewData"
            android:textAlignment="center"
            android:layout_below="@+id/textViewTemp2"
            android:layout_width="match_parent"
            android:textColor="@color/teal_700"
            android:layout_height="wrap_content"
            android:text="0"/>

        <Button
            android:id="@+id/buttonDelete"
            android:layout_below="@+id/textViewData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xoá dữ liệu chuyển"/>
    </RelativeLayout>



</RelativeLayout>